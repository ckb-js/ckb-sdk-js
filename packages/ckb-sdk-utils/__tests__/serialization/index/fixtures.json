  "serializeArray": {
    "basic array in hex string": {
      "array": "0x68d5438ac952d2f584abf879527946a537e82c7f3c1cbf6d8ebf9767437d8e88",
      "expected": "0x68d5438ac952d2f584abf879527946a537e82c7f3c1cbf6d8ebf9767437d8e88"
    },
    "basic array in bytes": {
      "array": [
        104,
        213,
        67,
        138,
        201,
        82,
        210,
        245,
        132,
        171,
        248,
        121,
        82,
        121,
        70,
        165,
        55,
        232,
        44,
        127,
        60,
        28,
        191,
        109,
        142,
        191,
        151,
        103,
        67,
